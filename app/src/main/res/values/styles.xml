<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">65%</item>
    </style>


    <style name="MyInputTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/text_input_edit_hint_floating_color</item>
        <item name="android:textColorHint">@color/text_input_edit_hint_color</item>
        <item name="colorControlNormal">@color/text_input_edit_hint_floating_color</item>
        <item name="colorControlActivated">@color/text_input_edit_hint_floating_color</item>
        <item name="colorControlHighlight">@color/text_input_edit_hint_floating_color</item>
    </style>

    <style name="MyInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/input_edit_text_size</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingStart">@dimen/extra_small_padding</item>
        <item name="android:paddingEnd">@dimen/extra_small_padding</item>
        <item name="android:textColor">@color/txt_val</item>
    </style>

    <style name="TxtMenuStyle">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textColor">@color/menu_txt_color</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/txt_btn_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
         <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="RowUserStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">@dimen/extra_small_margin</item>
        <item name="android:paddingEnd">@dimen/extra_small_margin</item>
        <item name="android:textColor">@color/row_user_text_color</item>
        <item name="android:textSize">@dimen/row_user_text_size</item>
    </style>

</resources>
